@inherits Components.AuthComponent
@page  "/login"

<div class="container">
    <h1>LOGIN</h1>

    <form>
        <div class="form-group">
            <label for="email">Email</label>
            <input name="email" placeholder="Email" class="form-control" bind="@email" />
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input name="password" type="password" placeholder="Password" class="form-control" bind="@password" />
        </div>

        <button type="button" class="btn btn-default" onclick="@(async () => await SignIn(email, password))">Log In</button>
    </form>
</div>

